# FreeBackend 生产环境优化配置
# 数据库连接优化配置

# 应用配置
NODE_ENV=production
PORT=3000
APP_NAME=FreeBackend
APP_VERSION=1.0.0

# 数据库配置（生产环境优化）
DB_HOST=your-production-db-host
DB_PORT=3306
DB_NAME=freebackend_prod
DB_USER=freebackend_user
DB_PASSWORD=your_secure_password_here
DB_DIALECT=mysql
DB_TIMEZONE=+08:00

# JWT配置
JWT_SECRET=your_super_secure_jwt_secret_key_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_secure_refresh_token_secret_production
JWT_REFRESH_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# 日志配置（生产环境详细日志）
LOG_LEVEL=warn
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# 安全配置（生产环境严格限制）
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
CORS_ORIGIN=https://your-domain.com

# 数据库连接池监控配置
DB_POOL_MAX_CONNECTIONS=5
DB_POOL_MIN_CONNECTIONS=1
DB_POOL_ACQUIRE_TIMEOUT=10000
DB_POOL_IDLE_TIMEOUT=60000

# 性能优化配置
ENABLE_QUERY_CACHE=true
QUERY_CACHE_TTL=300000  # 5分钟
MAX_QUERY_EXECUTION_TIME=10000  # 10秒

# Socket.IO配置（生产环境建议禁用）
ENABLE_SOCKET_IO=false

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# 调试配置（生产环境关闭）
DEBUG=false
DEBUG_DB_QUERIES=false

# 邮件配置（生产环境）
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your_smtp_password

# Redis配置（生产环境推荐启用）
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# 第三方API配置
GOOGLE_CLIENT_ID=your_production_client_id
GOOGLE_CLIENT_SECRET=your_production_client_secret